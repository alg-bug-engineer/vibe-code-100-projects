# 存储模式配置
# 选项: 'local' (LocalStorage) 或 'postgres' (PostgreSQL 数据库)
VITE_STORAGE_MODE=local

# PostgreSQL API 地址（仅在 STORAGE_MODE=postgres 时使用）
VITE_API_URL=http://localhost:3001/api

# Supabase 配置
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# 认证配置
VITE_LOGIN_TYPE=phone
VITE_SHOW_POLICY=true
VITE_POLICY_PREFIX=登录即表示同意
VITE_PRIVACY_POLICY_URL=
VITE_USER_POLICY_URL=

# GLM API 配置（智谱AI）
# 获取地址: https://open.bigmodel.cn/
VITE_GLM_API_KEY=your_glm_api_key_here
VITE_GLM_MODEL=glm-4-flash

# 可选模型:
# - glm-4-flash (推荐): 快速响应，性价比高
# - glm-4: 标准版本，平衡性能
# - glm-4-plus: 最强性能
# - glm-4-air: 轻量版本

# 废弃配置（已不使用）
# VITE_WENXIN_API_KEY=
# VITE_WENXIN_SECRET_KEY=
# VITE_APP_ID=

VITE_API_ENV=production
